{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "docker-build",
			"label": "docker-build",
			"platform": "python",
			"dockerBuild": {
				"tag": "kubelinks:latest",
				"dockerfile": "${workspaceFolder}/Dockerfile",
				"context": "${workspaceFolder}",
				"pull": true
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run: debug",
			"dependsOn": [
				"docker-build"
			],
			"dockerRun": {
				"env": {
					"FLASK_APP": "kubelinks_app.__init__.py",
					"KUBECONFIG": "/app/.kube/config",
					"LOGLEVEL": "DEBUG"
				},
				"ports":[
					{
					"hostPort": 8080,
					"containerPort": 8080
					}
				]
			},
			"python": {
				"args": [
					"run",
					"--no-debugger",
					"--no-reload",
					"--host",
					"0.0.0.0",
					"--port",
					"8080"
				],
				"module": "flask"
			}
		}
	]
}
